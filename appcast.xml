---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.title | xml_escape }} Updates</title>
		<link>{{ "appcast.xml" | prepend: site.baseurl | prepend: site.url }}</link>
		<description>Most recent changes with links to updates.</description>
    {% assign versions = site.data.versions | where:'history', no | group_by:'minimum' %}
    {% for version in versions %}{% for entry in version.items limit:1 %}
		<item>
			<title>Version {{ entry.version | xml_escape }}</title>
			<sparkle:minimumSystemVersion>{{ entry.minimum | xml_escape }}</sparkle:minimumSystemVersion>
      {% if entry.changes.size == 1 %}
			<description>
        <![CDATA[
          <p>{{ entry.changes }}<p>
        ]]>
      </description>
      {% elsif entry.changes.size > 1 %}
      <description>
        <![CDATA[
          <ul>
            {% for entry in entry.changes %}
            <li>{{ entry }}</li>
            {% endfor %}
          </ul>
        ]]>
      </description>
      {% endif %}
			<pubDate>{{ entry.release | date_to_xmlschema }}</pubDate>
      {% if entry.sparkle %}
			<enclosure url="{{ site.github_download_url | replace: 'VERSION', entry.version | append: '.tar.bz2' | xml_escape }}" sparkle:version="{{ entry.version | string | xml_escape }}" length="{{ entry.sparkle.filesize | string | xml_escape }}" type="application/octet-stream" sparkle:dsaSignature="{{ entry.sparkle.dsa | string | xml_escape }}" sparkle:md5sum="{{ entry.sparkle.md5 | string | xml_escape }}" />
      {% else %}
      <sparkle:version>{{ entry.version | xml_escape }}</sparkle:version>
      <link>{{ site.github_version_url | append: entry.version | strip | xml_escape }}</link>
      {% endif %}
		</item>
    {% endfor %}{% endfor %}
	</channel>
</rss>
